<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment"
    android:background="#6B8AB0"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/atras"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_gravity="left"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:src="@drawable/flecha" />




            <TextView
                android:id="@+id/pautadeadalt2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="" />


            <ImageView
                android:id="@+id/equis"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_gravity="left"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:src="@drawable/x" />

        </LinearLayout>




        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginHorizontal="18dp"

            android:text=" Uneix-te a"
            android:textColor="@color/black"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/pautafinal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="18dp"
            android:layout_weight="0"
            android:text="" />

        <ImageView
            android:layout_width="155dp"
            android:layout_height="45dp"
            android:layout_gravity="left"
            android:layout_marginHorizontal="18dp"
            android:src="@drawable/logotip" />

        <TextView
            android:id="@+id/pauta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="18dp"
            android:layout_weight="0"
            android:text="" />


        <EditText
            android:id="@+id/nomycognomEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="18dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:hint=" Nom i Cognom" />

        <TextView
            android:id="@+id/pautance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="18dp"
            android:layout_weight="0"
            android:text="" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="18dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:hint=" Email" />

        <TextView
            android:id="@+id/pautaec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="18dp"
            android:layout_weight="0"
            android:text="" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="18dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:hint=" Contrasenya"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/pautaec2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="18dp"
            android:layout_weight="0"
            android:text="" />

        <EditText
            android:id="@+id/repiteixpasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="18dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:hint=" Repetiu contrasenya"
            android:inputType="textPassword" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/simpleCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:checked="false"
                android:text="" />





            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:text="Al registrarte, aceptas nuestros Términos y Condiciones y la Política de Privacidad"
                android:textColor="@color/black"

                android:textSize="11sp" />

        </LinearLayout>






        <TextView
            android:id="@+id/pautafinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="18dp"
            android:text="" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:background="@drawable/vlineas"
            android:text="Crear compte"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/pautafinal3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="18dp"
            android:layout_weight="0"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:text="Inicieu sessió amb la compte de Google"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/pautafinal4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="18dp"
            android:layout_weight="0"
            android:text="" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/googleSignInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="18dp" />

        <TextView
            android:id="@+id/pautafinal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginHorizontal="18dp"
            android:layout_weight="0"
            android:text="" />


    </LinearLayout>
</LinearLayout>