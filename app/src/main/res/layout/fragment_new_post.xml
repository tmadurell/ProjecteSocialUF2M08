<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewPostFragment"
    android:background="#E0E7EA">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


    <ImageView
            android:id="@+id/logo"
            android:layout_width="78dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:src="@drawable/logotip" />

        <EditText
            android:id="@+id/postContentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="¿Que està passant?"
            android:textSize="24sp"
            android:lines="6"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@color/white">
            <requestFocus />

        </EditText>

    <TextView
        android:id="@+id/pautafinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

        <!--P12 Firebase Storage P3-->
        <ImageView
            android:id="@+id/previsualizacion"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <Button
                    android:id="@+id/imagen_galeria"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="8dp"
                    app:backgroundTint="#33C1FF"

                    android:background="@drawable/image"
                    />
                <Button
                    android:id="@+id/video_galeria"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="8dp"
                    app:backgroundTint="#33C1FF"

                    android:background="@drawable/movie" />
                <Button
                    android:id="@+id/audio_galeria"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="8dp"
                    app:backgroundTint="#33C1FF"
                    android:background="@drawable/audio"/>


                <Button
                    android:id="@+id/camara_fotos"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="8dp"
                    app:backgroundTint="#33C1FF"
                    android:background="@drawable/camera" />
                <Button
                    android:id="@+id/camara_video"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="8dp"
                    app:backgroundTint="#33C1FF"
                    android:background="@drawable/video" />
                <Button
                    android:id="@+id/grabar_audio"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="8dp"

                    app:backgroundTint="#33C1FF"
                    android:background="@drawable/mic" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/publishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="25dp"
            android:backgroundTint="#33C1FF"
            android:text="Publicar" />
    </LinearLayout>
</FrameLayout>