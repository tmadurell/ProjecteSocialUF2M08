<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Usuaris">


    <ImageView
        android:id="@+id/logotip"
        android:layout_width="247dp"
        android:layout_height="130dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/logotip"
        app:layout_constraintBottom_toTopOf="@+id/usuariexistent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/minitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="89dp"
        android:text="Base de datos de PelÃ­culas,Series y
VideoJuegos en Internet"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/usuariexistent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logotip" />

    <Button
        android:id="@+id/usuariexistent"

        android:layout_width="270dp"
        android:layout_height="65dp"

        android:layout_marginTop="88dp"

