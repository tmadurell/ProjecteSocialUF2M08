        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/nouusuari"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logotip" />

    <Button
        android:id="@+id/nouusuari"

        android:layout_width="270dp"
        android:layout_height="56dp"

        android:layout_marginTop="45dp"

        android:layout_marginBottom="196dp"
        android:background="@drawable/lineas"
        android:text="Nou Usuari"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuariexistent" />


</androidx.constraintlayout.widget.ConstraintLayout>